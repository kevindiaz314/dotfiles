    set MINUTES (math $ELAPSED_TIME / 60)
    set SECONDS (math $ELAPSED_TIME % 60)
    set TIME_DISPLAY "$MINUTES"m "$SECONDS"s
else
    set TIME_DISPLAY "$ELAPSED_TIME"s
end

